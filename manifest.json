{
  "manifest_version": 2,
  "name": "Meckano Automator",
  "description": "A chrome extension to automate entring work with Meckano",
  "version": "0.0.3",
  "browser_action": {
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "scripts": ["dist/js/background.js"],
    "persistent": true
  },
  "permissions": [
    "alarms",
    "idle",
    "webRequest",
    "webRequestBlocking",
    "https://app.meckano.co.il/api/*"
  ]
}
